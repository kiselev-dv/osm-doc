<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>osm-doc</groupId>
  <artifactId>osm-doc</artifactId>
  <version>0.2</version>
  <scm>
    <developerConnection>scm:git:git@github.com:kiselev-dv/osm-doc.git</developerConnection>
  </scm>
  <distributionManagement>
    <repository>
      <id>internal.repo</id>
      <name>Internal Repository</name>
      <url>file:///opt/rhc/osm-doc/target/mvn-repo</url>
    </repository>
    <snapshotRepository>
      <id>internal.repo-snapshots</id>
      <name>Internal SNAPSHOT Repository</name>
      <url>file:///opt/osm-mvn-repo/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <github.global.server>github</github.global.server>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.sun.istack</groupId>
      <artifactId>istack-commons-runtime</artifactId>
      <version>2.16</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-core</artifactId>
      <version>2.2.7</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-impl</artifactId>
      <version>2.2.7</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.fastinfoset</groupId>
      <artifactId>FastInfoset</artifactId>
      <version>1.2.12</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>1.3.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javax.xml.bind</groupId>
      <artifactId>jaxb-api</artifactId>
      <version>2.2.7</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javax.xml.bind</groupId>
      <artifactId>jsr173_api</artifactId>
      <version>1.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <id>repo.pentaho.org</id>
      <url>http://mvn.naumen.ru/content/repositories/repo.pentaho.org</url>
    </repository>
    <repository>
      <id>repo.pentaho.org-third-party</id>
      <url>http://mvn.naumen.ru/content/repositories/repo.pentaho.org-third-party</url>
    </repository>
    <repository>
      <id>naumen-releases</id>
      <name>naumen-releases</name>
      <url>http://mvn.naumen.ru/content/repositories/releases/</url>
    </repository>
    <repository>
      <id>naumen-snapshots</id>
      <url>http://mvn.naumen.ru/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>spring-libs-release-s3-cache</id>
      <name>spring libs-release-s3-cache</name>
      <url>http://mvn.naumen.ru/content/repositories/spring-libs-release-s3-cache/</url>
    </repository>
    <repository>
      <id>public-jboss</id>
      <url>http://mvn.naumen.ru/content/repositories/public-jboss/</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>google-maven-snapshot-repository</id>
      <name>Google Maven Snapshot Repository</name>
      <url>http://mvn.naumen.ru/content/repositories/google-snapshots/</url>
    </repository>
    <repository>
      <id>spring-milestone</id>
      <name>Spring Portfolio Milestone Repository</name>
      <url>http://mvn.naumen.ru/content/repositories/spring-milestone/</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>codehaus-snapshots</id>
      <name>codehaus-snapshots</name>
      <url>http://mvn.naumen.ru/content/repositories/codehaus-snapshots/</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>naumen-releases</id>
      <url>http://mvn.naumen.ru/content/repositories/releases/</url>
    </pluginRepository>
    <pluginRepository>
      <id>naumen-snapshots</id>
      <url>http://mvn.naumen.ru/content/repositories/snapshots/</url>
    </pluginRepository>
    <pluginRepository>
      <id>central-mirror</id>
      <url>http://mvn.naumen.ru/content/repositories/central/</url>
    </pluginRepository>
    <pluginRepository>
      <id>public-jboss</id>
      <url>http://mvn.naumen.ru/content/repositories/public-jboss/</url>
    </pluginRepository>
    <pluginRepository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>Naumen Codehaus Plugin Repository</id>
      <name>Naumen Codehaus Plugin Repository</name>
      <url>http://mvn.naumen.ru/content/repositories/codehaus-snapshots/</url>
    </pluginRepository>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/opt/rhc/osm-doc/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>target</directory>
    <plugins>
      <plugin>
        <groupId>com.github.github</groupId>
        <artifactId>site-maven-plugin</artifactId>
        <version>0.9</version>
        <extensions>false</extensions>
        <executions>
          <execution>
            <phase>deploy</phase>
            <goals>
              <goal>site</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <message>Maven artifacts for ${project.version}</message>
          <noJekyll>true</noJekyll>
          <outputDirectory>${project.build.directory}/mvn-repo</outputDirectory>
          <branch>refs/heads/mvn-repo</branch>
          <includes>
            <include>**/*</include>
          </includes>
          <repositoryName>osm-doc</repositoryName>
          <repositoryOwner>kiselev-dv</repositoryOwner>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
